server {
    listen 80;
    server_name sample.dev-srv.net;

    index index.php index.html;
    error_log  /var/log/nginx/sample.dev-srv.net-error.log;
    access_log /var/log/nginx/sample.dev-srv.net-access.log;
    root /var/www/html/path/to/document/root;
    set $php_fpm_document_root /var/www/html/path/to/document/root;

    location / {
        # This is cool because no php is touched for static content.
        # include the "$is_args$args" so non-default permalinks doesn't break when using query string
        try_files $uri $uri/ /index.php$is_args$args;
    }

    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass backend_php;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $php_fpm_document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
    }
}

server {
    listen 443 ssl;
    server_name brmm.tnp-local.dev-srv.net;
    fastcgi_param HTTPS on;

    ssl_certificate /etc/ssl/ca.pem;
    ssl_certificate_key /etc/ssl/ca-key.pem;
    ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;

    index index.php index.html;
